{
  "name": "atom-utils-plus",
  "version": "0.9.2",
  "description": "A bunch of general purpose utilities for Atom packages",
  "main": "lib/atom-utils.js",
  "files": [
    "src",
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/atom-ide-community/atom-utils-plus.git"
  },
  "keywords": [
    "atom",
    "utils"
  ],
  "author": "Cédric Néhémie <cedric.nehemie@gmail.com>, Amin Yahyaabadi <aminyahyaabadi74@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/atom-ide-community/atom-utils-plus/issues"
  },
  "homepage": "https://github.com/atom-ide-community/atom-utils-plus",
  "scripts": {
    "lint": "coffeelint src/*.coffee spec/*.coffee",
    "test": "atom --test spec",
    "clean": "shx rm -rf lib",
    "babel": "npm run clean && shx cp -r src lib && cross-env NODE_ENV=development cross-env BABEL_KEEP_MODULES=false babel lib --out-dir lib",
    "dev": "npm run clean && cross-env NODE_ENV=development cross-env BABEL_KEEP_MODULES=true rollup -c -w",
    "build": "npm run clean && cross-env NODE_ENV=production cross-env BABEL_KEEP_MODULES=true rollup -c ",
    "bump": "ncu -u -x coffeescript",
    "prepare": "npm run build"
  },
  "dependencies": {
    "mixto": "^1",
    "grim": "^2"
  },
  "devDependencies": {
    "@types/atom": "^1.40.4",
    "@types/mixto": "^0.0.30",
    "coffeelint": "^2.1.0",
    "promise": "*",
    "coffeescript": "^1.12.7",
    "rollup": "^2.21.0",
    "rollup-plugin-atomic": "^1.6.4",
    "shx": "^0.3.2",
    "cross-env": "^7.0.2",
    "@babel/cli": "7.10.4",
    "@babel/core": "7.10.4",
    "babel-preset-atomic": "3.0.0",
    "npm-check-updates": "latest"
  },
  "coffeelintConfig": {
    "no_empty_param_list": {
      "level": "error"
    },
    "max_line_length": {
      "level": "ignore"
    }
  }
}
